@page
@model ArtHut.Pages.Order.PaymentDetailsModel
@{
}
<div class="container">
	<div class="row mycontainer">
		<div class="row d-flex justify-content-center  align-self-center pt-5 pb-5">
			<h3 class="fontSul justify-content-center align-self-center d-flex">Review and Submit Order</h3>
		</div>
		<div class="col-7  pe-2 fontSulLight">
			@*<form method="post" class=" bg-white ps-5 pe-5 pt-4 pb-4 mb-3">

				<button type="submit" asp-page-handler="" class="row text-decoration-underline border-0 bg-white"> Remove</button>
				</form>*@
			<div class=" mt-0  bg-white p-5 ">

				<h4 class=" mb-5 fontSul">Enter Your Payment Details</h4>
				<div class="row">
					<div class="row">
						<div class="col">
							<label asp-for="Input.CartholderName" class="form-label "></label>
							<input asp-for="Input.CartholderName" class="form-control rounded-0 border-1 " placeholder="As shown on card" style="--bs-border-opacity: .5;" />
							<span asp-validation-for="Input.CartholderName" class="text-danger"></span>
						</div>
					</div>
					<div class="row mt-4">
						<div class="col">
							<label asp-for="Input.CardDetails" class="form-label "></label>
							<input asp-for="Input.CardDetails" class="form-control rounded-0 border-1 " placeholder="Enter card number" style="--bs-border-opacity: .5;" />
							<span asp-validation-for="Input.CardDetails" class="text-danger"></span>
						</div>
					</div>
				</div>
			</div>

		</div>

		<div class="col-5   ps-2">
			<div class="bg-white p-4">
				<div class="p-3 pb-0">
					<h5 class="fontSul mb-4">Order summary</h5>
					<div class="">
						<div class="row d-flex mb-3 fontSulLight"><div class="col">Artwork subtotal</div> <div class="col text-end fontSulLight">£120.00</div></div>
						<div class="row d-flex mb-3 fontSulLight"><div class="col">Shipping total</div> <div class="col text-end">£120.00</div></div>
						<div class="row d-flex mb-3 fontSulLight"><div class="col fontSul">Order total</div> <div class="col text-end ">£145.99</div></div>

						<form action="/checkout/start-payment/" method="POST" id="start-payment-form" class="row g-flex mt-5 mb-3">
							<a class="btn red_btn rounded-0 fontSul p-2" type="submit" asp-area="" asp-page="/Order/Review">
								Continue  &nbsp;
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="28" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
									<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
								</svg>
							</a>
						</form>
					</div>
				</div>
			</div>
		</div>


	</div>
</div>
