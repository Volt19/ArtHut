<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>@ViewData["Title"] - ArtHut</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ArtHut.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link runat="server" rel="shortcut icon" href="~/favicon.ico" type="image/x-icon"/>
    <link runat="server" rel="icon" href="~/favicon.ico" type="image/ico"/>
	<link rel="icon" type="image/x-icon" href="~/favicon.ico" sizes="32x32">

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</head>

@using ArtHut.Areas.Identity.Pages.Account.Manage
@using Microsoft.AspNetCore.Identity
@using ArtHut.Data.Models;
@using ArtHut.Areas.Identity.Pages.Account

@inject SignInManager<User> signInManager
<body>
	<header>
		<div class="offer-bar"></div>
		<nav id="navbar_top" class="mynav navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom ">
			<div class="container mycontainer">
				<a id="arthutLogo" class="mynavbar-brand" asp-area="" asp-page="/Index"><img src="~/css/imgs/Red Panda logo.png" class="mynavbar-brand logo" /> ArtHut</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark color_change_red ps-3" asp-area="" asp-page="/Shop" asp-route-category="">Shop</a>
						</li>
					</ul>
				</div>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">

					@{
						await Html.RenderPartialAsync("_LoginPartial");
					}
				</div>
				<a class="basket"  asp-area="" asp-page="/Cart">
					<img src="~/css/imgs/basket-icon-darck.png" class="image-main  nav-item" />
					<img class="image-hover" src="~/css/imgs/basket-icon-red.png">
				</a>
			</div>
		</nav>
	</header>
	<div class="">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<div class="color_gray">
				&copy; 2022 - ArtHut - <a class="privacyLink" asp-area="" asp-page="/Privacy">Privacy</a>
			</div>
		</div>
	</footer>

	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
