@page
@model ArtHut.Pages.AddPhotoModel
@{
}
<div class="row">
	<div class="col-md-4">
		<form asp-action="AddPhoto" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.PictureName" class="control-label"></label>
				<input asp-for="Input.PictureName" class="form-control" />
				<span asp-validation-for="Input.PictureName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Picture" class="control-label"></label>
				<input asp-for="Input.Picture" accept="image/*" />
				<span asp-validation-for="Input.Picture" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="AddPicture" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div> 